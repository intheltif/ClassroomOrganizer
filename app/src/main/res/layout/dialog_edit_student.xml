<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="8"
    android:gravity="center"
    >

    <ImageView
        android:id="@+id/iv_edit_photo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        app:srcCompat="@drawable/student_icon"
        />

    <TextView
        android:id="@+id/tv_edit_first_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="First Name:"
        />

    <EditText
        android:id="@+id/et_edit_first_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="John"
        />

    <TextView
        android:id="@+id/tv_edit_last_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="Last Name"
        />

    <EditText
        android:id="@+id/et_edit_last_name"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Doe"
        />

    <ImageButton
        android:id="@+id/btn_delete_student"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/ic_delete" />

</LinearLayout>